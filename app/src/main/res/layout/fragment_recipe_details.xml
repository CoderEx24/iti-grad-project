<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:padding="12dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/flImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/colorSurfaceVariant"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="16dp">

            <!-- Top Recipe Image -->
            <ImageView
                android:id="@+id/ivRecipeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/meal_image"
                android:background="?attr/colorSurfaceVariant"
                android:foreground="?attr/selectableItemBackground" />

            <!-- Favorite button -->
        </FrameLayout>
        <!-- Title + Info -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Meal Name -->
            <TextView
                android:id="@+id/tvMealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Meal Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/ivFavorite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Favorite Icon -->
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/favorite"
                android:contentDescription="@string/favoriteBtnDescription"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintStart_toEndOf="@id/tvMealName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/light_gray" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tvCategoryArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_category"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredients"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:nestedScrollingEnabled="false"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instructions"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/recipe_instructions"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="12dp" />

        <!-- Youtube Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youtube"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp" />

        <!-- Video window with favorite button -->
        <FrameLayout
            android:id="@+id/flVideo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="?attr/colorSurfaceVariant"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="16dp">

            <WebView
                android:id="@+id/wvYouTube"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/ivMealThumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/meal_image" />

            <ImageView
                android:id="@+id/ivPlayButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/play"
                android:layout_gravity="center" />

        </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
