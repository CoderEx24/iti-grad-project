<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E0E0E0"/>  <!-- soft gray, adjust if needed -->

    <!-- Rounded corners -->
    <corners android:radius="24dp"/>  <!-- makes pill shape -->

    <!-- Optional shadow effect for elevation -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"/>
</shape>
