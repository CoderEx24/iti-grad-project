<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_activity"
    app:startDestination="@id/homeFragment">

    <!-- Bottom Nav Fragments -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.iti_grad_project.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <!-- Recipe details navigation -->
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.iti_grad_project.ui.fragments.FavouriteFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_favouriteFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.iti_grad_project.ui.fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.iti_grad_project.ui.fragments.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

    <!-- Recipe Details (Standalone Screen) -->
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.example.iti_grad_project.ui.fragments.RecipeDetailsFragment"
        android:label="Recipe Details"
        tools:layout="@layout/fragment_recipe_details" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.iti_grad_project.ui.fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>
